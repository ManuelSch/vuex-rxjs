{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "./src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
